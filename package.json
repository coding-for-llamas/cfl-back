{
  "name": "cfl-back",
  "version": "0.0.1",
  "description": "Coding for Llamas backend",
  "main": "index.js",
  "engines": {
    "node": ">13.4.0"
  },
  "files": [
    "lib/",
    "model/",
    "auth/",
    "config.js",
    "routes.js"
  ],
  "license": "MIT",
  "scripts": {
    "cc": "codeclimate analyze -f html > codeclimate.html",
    "start:debug": "DEBUG=cfl-back:* nodemon index.js",
    "installglobals": "yarn global add npm@latest",
    "postinstall": "./postinstallcflFront.sh",
    "dev": "nodemon index.js",
    "build:prod": "(cd cfl-front || exit; npm start -- build)",
    "start": "node index.js",
    "cleaninstall": "rm -rf yarn.lock && rm -rf node_modules && yarn cache clean && yarn install",
    "node:debug": "node --inspect-brk index.js",
    "test": "eslint . && rm -rf coverage && npm run test:jest",
    "test:lint": "eslint . --fix",
    "test:local": "eslint . --fix && rm -rf coverage && yarn test:jest && yarn cc",
    "test:jest": "cross-env NODE_ENV=test && jest --no-cache --config jest.config.json --notify --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coding-for-llamas/cfl-back.git"
  },
  "author": "Rhayven <codingforllamas@gmail.com>",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "helmet": "^3.21.3",
    "jwt-simple": "^0.5.6",
    "moment": "^2.24.0",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "superagent": "^5.2.2"
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-es": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-security": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "supertest": "latest"
  }
}
