{
  "name": "cfl-back",
  "version": "1.1.0",
  "description": "Coding for Llamas backend",
  "main": "index.ts",
  "engines": {
    "node": "16.13.2"
  },
  "files": [
    "lib/",
    "model/",
    "auth/",
    "config.js",
    "routes.js"
  ],
  "license": "MIT",
  "scripts": {
    "rmrf": "rm -rf build && rm -rf cfl-front && rm -rf caring-child-daycare && rm -rf coverage",
    "start:debug": "rm -rf build && tsc && npm-run-all -p ts-start ts-watch",
    "ts-watch": "tsc -w",
    "cc": "codeclimate analyze -f html > codeclimate.html",
    "ts-start": "DEBUG=cfl-back:* nodemon build/index.js",
    "installglobals": "npm install -g npm@latest && npm install -g snyk",
    "build:front": "./postinstallcflFront.sh && rm -rf ./cfl-front/src && rm -rf ./cfl-front/test &&& ./postinstallcaringChildDaycare.sh && rm -rf ./caring-child-daycare/src && rm -rf ./caring-child-daycare/test",
    "postinstall": "npm run rmrf && tsc && npm run build:front",
    "rebuild:front": "./postinstallcflFront.sh && npm run build:prod && ./postinstallcaringChildDaycare.sh && npm run build:prod",
    "build:prod": "(cd cfl-front || exit; npm start -- build) && (cd caring-child-daycare || exit; npm start -- build)",
    "start": "node build/index.js",
    "cleaninstall": "rm -rf yarn.lock && rm -rf node_modules && rm -rf package-lock.json && npm cache clean --force && npm install",
    "node:debug": "node --inspect-brk index.js",
    "test": "eslint ./src && rm -rf coverage && npm run test:jest",
    "test:lint": "eslint ./src --fix",
    "test:local": "npm run test:lint && rm -rf coverage && npm run test:jest && npm run cc",
    "test:jest": "jest --no-cache --config jest.config.json --runInBand --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coding-for-llamas/cfl-back.git"
  },
  "author": "Rhayven <codingforllamas@gmail.com>",
  "dependencies": {
    "@sendgrid/mail": "latest",
    "@types/bcryptjs": "latest",
    "@types/body-parser": "latest",
    "@types/cors": "latest",
    "@types/debug": "latest",
    "@types/express": "latest",
    "@types/express-sslify": "latest",
    "@types/morgan": "latest",
    "@types/superagent": "latest",
    "bcryptjs": "latest",
    "body-parser": "latest",
    "cors": "latest",
    "cross-env": "latest",
    "debug": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-sslify": "latest",
    "helmet": "latest",
    "jwt-simple": "latest",
    "moment": "latest",
    "mongoose": "^6.0.4",
    "morgan": "latest",
    "nodemon": "latest",
    "snyk": "^1.667.0",
    "superagent": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/supertest": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-config-airbnb-typescript": "latest",
    "eslint-plugin-es": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-json": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-security": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "npm-run-all": "latest",
    "supertest": "latest",
    "ts-jest": "latest"
  }
}
