{
  "name": "cfl-back",
  "version": "1.0.0",
  "description": "Coding for Llamas backend",
  "main": "index.ts",
  "engines": {
    "node": ">=16.2.0"
  },
  "files": [
    "model/",
    "config.ts",
    "routes.ts"
  ],
  "license": "MIT",
  "scripts": {
    "cc": "codeclimate analyze -f html > codeclimate.html",
    "rmrf": "rm -rf build && rm -rf cfl-front && rm -rf caring-child-daycare && rm -rf coverage",
    "start": "node build/index.js",
    "start:debug": "concurrently \"yarn ts-start\" \"tsc -w\"",
    "node:debug": "node --inspect-brk index.js",
    "ts-start": "DEBUG=cfl-back:* nodemon build/index.js",
    "build:front": "./postinstallcflFront.sh && rm -rf ./cfl-front/src && rm -rf ./cfl-front/test && ./postinstallcaringChildDaycare.sh && rm -rf ./caring-child-daycare/src && rm -rf ./caring-child-daycare/test",
    "build:prod": "concurrently \"(cd cfl-front || exit; npm start -- build)\" \"(cd caring-child-daycare || exit; npm start -- build)\"",
    "postinstall": "yarn rmrf && tsc && yarn build:front",
    "cleaninstall": "rm -rf yarn.lock && rm -rf node_modules && yarn cache clean && yarn install",
    "installglobals": "yarn global add npm@latest",
    "test": "eslint ./src && rm -rf coverage && npm run test:jest",
    "test:lint": "eslint ./src --fix",
    "test:local": "yarn test:lint && rm -rf coverage && yarn test:jest && yarn cc",
    "test:jest": "jest --no-cache --config jest.config.json --runInBand --detectOpenHandles --forceExit",
    "heroku-prebuild": "npm install --dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coding-for-llamas/cfl-back.git"
  },
  "author": "Rhayven <codingforllamas@gmail.com>",
  "dependencies": {
    "@sendgrid/mail": "latest",
    "@types/bcryptjs": "latest",
    "@types/cors": "latest",
    "@types/debug": "latest",
    "@types/express": "latest",
    "@types/express-sslify": "latest",
    "@types/helmet": "latest",
    "@types/mongoose": "latest",
    "@types/morgan": "latest",
    "bcryptjs": "latest",
    "body-parser": "latest",
    "cors": "latest",
    "cross-env": "latest",
    "debug": "latest",
    "dotenv": "latest",
    "express": "latest",
    "express-sslify": "latest",
    "helmet": "latest",
    "jwt-simple": "latest",
    "moment": "latest",
    "mongoose": "latest",
    "morgan": "latest",
    "node-notifier": "^10.0.0",
    "nodemon": "latest",
    "superagent": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@types/jest": "latest",
    "@types/supertest": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "concurrently": "latest",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-config-airbnb-typescript": "latest",
    "eslint-plugin-es": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-json": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-security": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "supertest": "latest",
    "ts-jest": "latest"
  }
}
